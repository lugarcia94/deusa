body
    font-family: 'Work Sans', sans-serif

.header 
    background: #79105a

    &__container
        max-width: 1330px
        display: flex
        justify-content: space-between
        align-items: center
        margin: 0 auto
        padding: 0 15px
.menu

    &__item
        padding: 15px

    &__link
        font-size: 21px
        color: #ecc6e4
        font-weight: 600


.search
    display flex
    align-items: center

    &__input
        background: transparent
        border: none
        min-height: 48px

        &::placeholder
            line-height: normal
            color: #ecc6e4
            font-weight: 400

    &__button
        background: transparent
        border: none
        color: #ecc6e4
        min-width 48px
        height 48px


.attendance
    &__link
        font-size: 19px
        line-height: normal
        color: #ecc6e4
        font-weight: 400
        text-transform: uppercase
        padding: 0 15px
        

.main
    &__container
        max-width: 1330px
        display: block
        margin: 0 auto
        padding: 10px 15px 0

.title
    display block
    font-family: 'Eczar', serif;
    font-size: 25px
    line-height: 1
    color: #000000
    font-weight: 400

    &__big
        font-size: 46px
        line-height: 1
        color: #000000
        font-weight: 600
        font-family: 'Eczar', serif;


    &__small
        font-size: 16px
        letter-spacing: 5px
        line-height: normal
        color: #000000
        font-weight: 400

    &__vitrine
        display: block
        text-align: center
        margin-bottom 30px

        font-family: 'Work Sans', sans-serif
        text-transform: uppercase
        letter-spacing: 8px;
        font-weight: 400;
        text-decoration: underline

      
    &__depoimentos
        display: block
        font-size: 25px;
        letter-spacing: 8px;
        line-height: normal;
        color: #000000;
        font-weight: 400;
        text-transform: uppercase
        margin-bottom: 30px
        font-family: 'Work Sans', sans-serif

        &:before
            content: ''
            display: block
            width 100%
            height 1px
            background: #000
.block
    display: flex
    justify-content: space-between

    &__left
        max-width 720px

        .title
            margin-bottom: 30px

        &--bottom
            display: flex
            align-items: center
            justify-content:    space-between

        &--top
            margin-bottom 50px

            img
                margin-bottom 30px

        &--content
            max-width 340px

            .title
                margin-bottom 20px

    &__center
        max-width 250px

    &__right
        max-width 260px

.podcasts
    margin: 130px 0

    &__ul
        display: flex
        align-items: stretch
        justify-content: space-between

    &__item
        flex: 0 0 25%
        padding: 0 15px

    .title__vitrine
        margin-bottom 80px

.curso
    margin: 30px 0

    &__ul
        display: flex
        align-items: stretch
        justify-content: space-between

    &__item
        flex: 0 0 25%
        padding: 0 15px
    
    .title__vitrine
        margin-bottom 80px

.price
    background-color: #79105a
    margin-top: -4px
    text-align: center
    padding: 5px 0
    margin-bottom 10px

    span 
        font-size: 25px
        letter-spacing: 1px
        line-height: normal
        color: #ecc6e4
        font-weight: 400

.newsletter
    background-color: #9c6b80
    box-shadow: 900px 0  0 #9c6b80, -900px 0 0 #9c6b80
    padding: 50px 0
    
    &__title
        font-family: 'Work Sans', sans-serif
        font-size: 15px
        letter-spacing: 7px
        line-height: normal
        color: #ecc6e4
        font-weight: 500

    &__description
        font-size: 30px
        letter-spacing: 3px
        line-height: normal
        color: #ecc6e4
        font-weight: 500
        text-align: center

    &__content
        display: block
        text-align: center
        max-width 900px
        margin: 0 auto
        padding: 15px
        font-family: 'Eczar', serif;

.full-banner
    margin-bottom 120px

.home-banner
    margin-top : 50px

.flag
    display: inline-block
    background: #79105A
    color: #ECC6E4
    padding: 10px 30px

.sociais
    margin: 30px 0

    &__title
        display: block
        font-size: 35px
        letter-spacing: 4px
        line-height: normal
        color: #460f48
        font-weight: 500
        text-align: center
        font-family: 'Eczar', serif;


.footer
    background-color: #b3799f
    padding: 30px 0

    &__container
        max-width: 1330px
        margin: 0 auto
        display: block
        padding: 0 15px

    &__content
        border-bottom: solid 1px #ecc6e4
        margin-bottom 15px
        padding-bottom 15px

    &__title
        display: block
        font-size: 21px
        line-height: normal
        color: #ecc6e4
        font-weight: 500
     
    &__link
        font-size: 21px
        line-height: normal
        color: #ecc6e4
        font-weight: 500

    &__social
        display: block

        a, span 
            display: block

            font-size: 18px
            line-height: normal 
            color: #ecc6e4
            margin-bottom 3px

    &__block
        display: flex
        align-items: stretch
    
    &__ul
        flex: 1


.content
    display: flex
    align-items: flex-start
    justify-content: space-between

    &__left
        padding-right: 50px

        img
            margin-bottom 30px


    &__right
        max-width 290px
        
        &--item
            margin-bottom 30px

    .title__big
        margin-bottom 60px

    &__title
        font-size: 33px
        line-height: normal
        font-family: 'Work Sans', sans-serif

@media (max-width:992px)
    .header
        &__attendance
            display: none

        &__search
            flex: 0 0 100%

        &__container
            flex-wrap: wrap
    .main
        &__container
            padding: 0 15px

    .title
        &__big
            font-size: 30px
            
    .block
        flex-wrap: wrap
        justify-content: center

        &__left 
            max-width: none
            flex: 0 0 100%
            width: 100%

            &--bottom
                flex-wrap: wrap

        &__center
            flex: 1    
            max-width none

            ul
                display: flex
                flex-wrap: wrap

                li
                    flex: 0 0 50%
                    padding: 7px

        &__right
            flex: 0 0 100%
            max-width none
            margin-top 40px

            ul
                display: flex
                flex-wrap: wrap

                li
                    flex: 0 0 50%
                    padding: 7px

    .podcasts
        &__ul
            flex-wrap: wrap

        &__item
            padding: 15px 
            flex: 0 0 50%
    

    .curso
        &__ul
            flex-wrap: wrap

        &__item
            padding: 15px 
            flex: 0 0 50%

    .newsletter
        background-color: #9c6b80
        box-shadow: 300px 0  0 #9c6b80, -300px 0 0 #9c6b80

    .footer
        background-color: #b3799f
     

        &__container
            padding: 0 15px

    .navigation
        position: fixed
        left -346px
        background: #79105a
        width 286px
        top: 0
        bottom 0

        &__open

            .navigation
                opacity 1
                left 0
    .search
        &__input
            flex: 1
            min-width 0px
            margin-left: 3px 

    .menu
        &-btn
            width 48px
            height 48px
            background: transparent
            border: none

            &__close
                position: absolute
                left 100%  

                font-size: 24px 

            svg
                width 20px
                height 20px 

        &__ul
            overflow auto

    .content
        flex-wrap: wrap

        &__right
            margin-top 30px

    .full-banner 
        margin-bottom 40px


@media (min-width : 993px)

    .block
        &__right
            &--item
                margin-bottom 50px
        
        &__center
            ul
                li
                    margin-bottom 30px

    
    .navigation

        &__container
            max-width: 1330px
            display: flex
            justify-content: space-between
            align-items: center
            margin: 0 auto
            border-top: 1px solid #fff
            padding: 0 15px

    .menu
        &__ul
            display: flex
            align-items: center
            justify-content: flex-start

        &-btn
            display: none

    .search
        display flex
        align-items: center

        &__input
            min-width 300px

            &::placeholder
                font-size: 19px

    .footer
        &__ul
            column-count: 4